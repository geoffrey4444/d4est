[initial_grid]
min_quadrants = -1
min_level = 0
fill_uniform = 1
deg = 1
deg_quad = 6

[problem]
deg_vol_quad_inc = 5

[flux]
name = sipg
sipg_penalty_prefactor = 2.0
sipg_flux_h = H_EQ_J_DIV_SJ_QUAD
sipg_penalty_fcn = maxp_sqr_over_minh

[amr]
scheme = uniform_p
num_of_amr_steps = 2
max_degree = 7 

