[initial_mesh]
min_quadrants = -1
min_level = 2
fill_uniform = 1
region0_deg = 1
region0_deg_quad_inc = 0

[problem]
eval_method = EVAL_BNDRY_FCN_ON_LOBATTO
deg_vol_quad_inc = 0

[flux]
name = sipg
sipg_penalty_prefactor = 2.0
sipg_flux_h = H_EQ_VOLUME_DIV_AREA
sipg_penalty_fcn = maxp_sqr_over_minh

[amr]
scheme = uniform_p
num_of_amr_steps = 0
max_degree = 7

[geometry]
name = brick
X0 = 0.0
X1 = 1.0
Y0 = 0.0
Y1 = 1.0
Z0 = 0.0
Z1 = 1.0
DX_compute_method = analytic
JAC_compute_method = numerical

[d4est_vtk]
filename = poisson_sinx_uniform
geometry_section = geometry
output_type = ascii
grid_type = dg
write_tree = 1
write_level = 1
write_rank = 1
wrap_rank = 0
write_deg = 1

