[p4est]
min_quadrants = -1
min_level = 0
fill_uniform = 1

[ip_flux_params]
name = kronbichler
ip_flux_penalty_prefactor = 2.0
ip_flux_bc_eval = BC_EVAL_ON_LOBATTO_POINTS
ip_flux_h_calc = H_EQ_J_DIV_SJ
ip_flux_penalty_calculate_fcn = meanp_sqr_over_meanh

[problem]
num_unifrefs = 0
deg_R2= 3
deg_integ_R2= 3
deg_stiffness_R2= 4
deg_R1= 3
deg_integ_R1= 3
deg_stiffness_R1= 3
deg_R0= 3
deg_integ_R0= 3
deg_stiffness_R0= 3
rhs_compute_method = COMPUTE_RHS_ON_LOBATTO

[geometry]
; name = cubed_sphere_inner_shell_block
name = cubed_sphere_outer_shell_block
; name = cubed_sphere_innerouter_shell
R0 = 10
R1 = 20
R2 = 10000000000
X_mapping_type = analytic
compactify_outer_shell = 1
compactify_inner_shell = 0

[krylov_petsc]
ksp_type = cg
ksp_atol = 1e-25
ksp_rtol = 1e-25
ksp_max_it = 10000
ksp_view = 1
ksp_monitor = 1
ksp_converged_reason = 1
ksp_initial_guess_nonzero = 1
ksp_monitor_singular_value = 1

[d4est_vtk_geometry]
; name = cubed_sphere_inner_shell_block
name = cubed_sphere_outer_shell_block
; name = cubed_sphere_innerouter_shell
R0 = 1
R1 = 2
R2 = 10
compactify_outer_shell = 1
compactify_inner_shell = 0
X_mapping_type = analytic