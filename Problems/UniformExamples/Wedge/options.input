[p4est]
min_quadrants = -1
min_level = 0
fill_uniform = 1

[d4est_poisson_flux_sipg_params]
sipg_penalty_prefactor = 2.0
sipg_flux_h = H_EQ_J_DIV_SJ
sipg_penalty_fcn = meanp_sqr_over_meanh

[problem]
num_unifrefs = 0
deg = 3
deg_quad = 3
rhs_use_lobatto = 1

[geometry]
name = disk_outer_wedge
R1 = 1
R2 = 1000
compactify_outer_wedge = 1
DX_compute_method = analytic
JAC_compute_method = numerical

[krylov_petsc]
ksp_type = gmres
ksp_atol = 1e-15
ksp_rtol = 1e-50
ksp_max_it = 10000
ksp_view = 1
ksp_monitor = 1
ksp_converged_reason = 1
ksp_initial_guess_nonzero = 1

[d4est_vtk_geometry]
name = disk_outer_wedge
R1 = 1
R2 = 2
compactify_outer_wedge = 1
DX_compute_method = analytic
JAC_compute_method = numerical


[d4est_cg]
iter = 1
monitor = 1
rtol = 1e-20
atol = 1e-20


[quadrature]
name = legendre
