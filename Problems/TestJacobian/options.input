[p4est]
min_quadrants = -1
min_level = 0
fill_uniform = 1

[ip_flux_params]
name = kronbichler
sipg_penalty_prefactor = 2.0
ip_flux_bc_eval = BC_EVAL_ON_LOBATTO_POINTS
sipg_flux_h = H_EQ_J_DIV_SJ_MIN
sipg_penalty_fcn = meanp_sqr_over_meanh

[problem]
num_unifrefs = 0
deg_R2= 2
deg_quad_R2= 2
deg_stiffness_R2= 2
deg_R1  = 2
deg_quad_R1  = 2
deg_stiffness_R1  = 2
deg_R0= 2
deg_quad_R0= 2
deg_stiffness_R0= 2
rhs_compute_method = COMPUTE_RHS_ON_LOBATTO

[geometry]
name = cubed_sphere_outer_shell_block
R0 = 4
R1 = 100
R2 = 1000000
DX_compute_method = analytic
JAC_compute_method = analytic
compactify_outer_shell = 1
compactify_inner_shell = 0
geom_quad_type = gauss 
